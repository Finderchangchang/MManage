<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:id="@+id/bnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="41dp"
        android:onClick="OnBnSearch"
        android:text="搜索设备" />

    <Button
        android:id="@+id/bnRead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_toEndOf="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:onClick="OnBnRead"
        android:text="开始读卡" />

    <Button
        android:id="@+id/bnDisconn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bnRead"
        android:layout_toEndOf="@+id/bnRead"
        android:layout_toRightOf="@+id/bnRead"
        android:onClick="OnBnDisconn"
        android:text="断开连接" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bnSearch"
        android:layout_marginTop="17dp"
        android:text="姓名："
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/infoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:width="100dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:text="性别："
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/infoSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bnRead"
        android:layout_toEndOf="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:width="130dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/infoName"
        android:layout_marginTop="13dp"
        android:text="民族："
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/infoNation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:width="100dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignTop="@+id/textView4"
        android:text="出生日期："
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/infoBirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/infoNation"
        android:layout_toEndOf="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:width="100dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/infoNation"
        android:layout_marginTop="14dp"
        android:text="地址："
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/infoAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/infoBirth"
        android:layout_alignLeft="@+id/infoNation"
        android:layout_alignRight="@+id/infoBirth"
        android:layout_alignStart="@+id/infoNation"
        android:layout_alignTop="@+id/textView6"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/infoIdcard"
        android:layout_alignBottom="@+id/infoIdcard"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="身份证号："
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/infoIdcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infoAddress"
        android:layout_toEndOf="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:width="250dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/infoIdcard"
        android:layout_marginTop="16dp"
        android:text="签发机关："
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="24dp"
        android:text="有效期限："
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/infoCertifying"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/infoIdcard"
        android:layout_alignStart="@+id/infoIdcard"
        android:layout_below="@+id/infoIdcard"
        android:width="250dp" />

    <EditText
        android:id="@+id/infoData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infoCertifying"
        android:layout_toEndOf="@+id/textView9"
        android:layout_toRightOf="@+id/textView9"
        android:width="250dp"
        android:inputType="none" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bnSearch"
        android:layout_toEndOf="@+id/bnSearch"
        android:layout_toRightOf="@+id/bnSearch"
        android:onClick="OnBnFirmVer"
        android:text="设备版本" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="102dp"
        android:layout_height="126dp"
        android:layout_below="@+id/infoData" />

    <Button
        android:id="@+id/uploadFinger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infoData"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/image"
        android:onClick="OnBnUpload"
        android:text="上传指纹" />

    <Button
        android:id="@+id/verifyFinger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uploadFinger"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/image"
        android:onClick="OnBnVerify"
        android:text="指纹核验" />

</RelativeLayout>
