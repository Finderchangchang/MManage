<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/tab_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_bg" />

        <com.yinglan.alphatabs.AlphaTabsIndicator
            android:id="@+id/alphaIndicator"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:paddingTop="3dp">

            <com.yinglan.alphatabs.AlphaTabView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:tabIconNormal="@mipmap/ic_launcher"
                app:tabIconSelected="@mipmap/ic_launcher"
                app:tabText="查询"
                app:tabTextSize="10sp"
                app:textColorNormal="@color/bottom_bg"
                app:textColorSelected="@color/colorPrimary" />

            <com.yinglan.alphatabs.AlphaTabView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="2dp"
                app:tabIconNormal="@mipmap/ic_launcher"
                app:tabIconSelected="@mipmap/ic_launcher"
                app:tabText="承接"
                app:tabTextSize="10sp"
                app:textColorNormal="@color/bottom_bg"
                app:textColorSelected="@color/colorPrimary" />

            <com.yinglan.alphatabs.AlphaTabView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="2dp"
                app:tabIconNormal="@mipmap/ic_launcher"
                app:tabIconSelected="@mipmap/ic_launcher"
                app:tabText="我"
                app:tabTextSize="10sp"
                app:textColorNormal="@color/bottom_bg"
                app:textColorSelected="@color/colorPrimary" />

        </com.yinglan.alphatabs.AlphaTabsIndicator>

    </LinearLayout>

</layout>
